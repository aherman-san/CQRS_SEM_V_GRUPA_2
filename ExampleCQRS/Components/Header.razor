@inject ICategoryService CategoryService

<header class="main-header">
    <nav class="header-nav container">
        <div class="nav-content">

            <a href="#" class="logo">
                Electro<span>Sklep</span>
            </a>

            <div class="search-container">
                <form class="search-form" role="search">
                    <label for="search" class="sr-only">Szukaj</label>
                    <input type="search" id="search" placeholder="Szukaj produktów (np. laptop, smartfon...)" class="search-input" required>
                    <button type="submit" class="search-button" aria-label="Szukaj">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    </button>
                </form>
            </div>

        </div>
    </nav>
</header>

<nav class="category-nav">
    <div class="container">
        @if (IsLoading)
        {
            <div class="category-list">Trwa ładowanie listy kategorii ...</div>
        }

        @if (Categories is not null && !IsLoading)
        {
            <ul class="category-list category-scrollbar">
                @foreach (var category in Categories)
                {
                    <li @onclick="() => OpenCategoryPage(category.Id)"><a class="herman-category">@category.Name</a></li>
                }
            </ul>
        }


    </div>
</nav>


@code {

    [Parameter]
    public CategoryDto[]? Categories { get; set; }

    [Parameter]
    public bool IsLoading { get; set; }

    protected void OpenCategoryPage(int categoryId)
    {

    }

}